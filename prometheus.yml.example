# Example Prometheus configuration for WireGuard Exporter

global:
  scrape_interval: 30s
  evaluation_interval: 30s
  external_labels:
    monitor: 'wireguard-monitor'

# Alertmanager configuration (optional)
# alerting:
#   alertmanagers:
#     - static_configs:
#         - targets: ['localhost:9093']

# Load rules once and periodically evaluate them
# rule_files:
#   - "wireguard_alerts.yml"

# Scrape configurations
scrape_configs:
  # WireGuard Exporter
  - job_name: 'wireguard'
    static_configs:
      - targets: ['localhost:9586']
        labels:
          environment: 'production'
          service: 'wireguard'
    scrape_interval: 30s
    scrape_timeout: 10s

  # If you have multiple WireGuard servers:
  # - job_name: 'wireguard-servers'
  #   static_configs:
  #     - targets: 
  #         - 'server1.example.com:9586'
  #         - 'server2.example.com:9586'
  #         - 'server3.example.com:9586'
  #       labels:
  #         environment: 'production'
  #   scrape_interval: 30s

  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

